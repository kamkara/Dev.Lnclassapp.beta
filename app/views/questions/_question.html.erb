<div id="<%= dom_id question %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= question.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Answer:</strong>
    <%= question.answer %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= question.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Exercice:</strong>
    <%= question.exercice_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this question", question, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this question', edit_question_path(question), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
