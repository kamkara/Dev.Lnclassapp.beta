<%= form_with(model: landpage, class: "contents") do |form| %>
  <% if landpage.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(landpage.errors.count, "error") %> prohibited this landpage from being saved:</h2>

      <ul>
        <% landpage.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: "block rounded-md border border-gray-200  px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :content %>
    <%= form.rich_text_area :content, rows: 4, class: "block bg-white rounded-md border border-blue-200 px-3 py-2 mt-2 w-full" %>
  </div>

 

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: "block  rounded-md border border-gray-200 px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
