                        </div>

                        <div class="items-center mb-4">
                
                            <%= f.password_field :password, autocomplete: "current-password",
                            placeholder:"N° WhatsApp", 
                            class:"w-full border  h-12 px-4 focus:outline-none" %>
                            <small class="italic">Ex: 0759977903</small>
                        </div>
                        
                        <div>
                            <div class="flex flex-col md:flex-row md:items-center my-2 ">
                            <%= f.submit "Se Connecter a mon compte",
                                class:"w-full text-center h-[50px] text-sm font-mediumtext-white
                          rounded mb-6 bg-[#13C296] cursor-pointer hover:shadow-lg hover:bg-opacity-90 transition duration-300 ease-in-out" %>
                            
                            <p class="text-gray-400 text-sm  self-center md:self-auto mt-4 md:mt-0">
                                
                                </p>
                            </div>
                            </div>
                        <% end %>
                    
                      
                    <p class="text-sm font-medium text-white">
