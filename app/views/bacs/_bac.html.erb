<div id="<%= dom_id bac %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= bac.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <div class="border bg-white p-2">
    <%= bac.content %>
    </div>
  </p>


  <p class="my-5">
    <strong class="block font-medium mb-1">Linked:</strong>
   <%= bac.linked %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this bac", bac, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this bac', edit_bac_path(bac), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
