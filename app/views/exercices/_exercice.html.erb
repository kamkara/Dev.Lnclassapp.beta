<div id="<%= dom_id exercice %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= exercice.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Published:</strong>
    <%= exercice.published %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Slug:</strong>
    <%= exercice.slug %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= exercice.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Course:</strong>
    <%= exercice.course_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this exercice", exercice, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this exercice', edit_exercice_path(exercice), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
