<% @FeedCourses.each do |c| %>
    <div class="bg-white border p-2 mb-2">
        <!-- Title-->
        <h2 class="font-semibold text-xl" > <%= link_to course_path(c) do %> <%= c.title %> <% end %></h2>

        <!-- Courses-->
        <div class="border rounded-md mt-2 ">
            <div class="p-2">
                <%= link_to course_path(c), class:"hover:text-black text-black no-underline" do %>
                    <%= truncate(strip_tags(c.content.to_s.html_safe), length: 400) %>
                    <span class="bg-blue-300" id=start-reading><i class="mx-2">voir plus ...</i></span>
                <% end %>
            </div>
            <!-- Feed Bar-->
            <div class="flex border py-2 font-semibold px-2">
                <div class="flex w-1/4"> 
                    <%= link_to 'Exercices', "https://wa.me/0584258085?text=j'aimerais que vous à corriger mes lacunes avant le Bac.Je voudrais accéder aux exercices, aux rédactions ansi que le groupe pour m'aider à corriger mes lacunes. Merci", class:"text-black" %>
                </div>
                <div class="flex w-2/4"> 
                  
                  <%= link_to 'Traité Lacunes', "https://wa.me/0584258085?text=j'aimerais que vous à corriger mes lacunes avant le Bac.Je voudrais accéder aux exercices, aux rédactions ansi que le groupe pour m'aider à corriger mes lacunes. Merci", class:"text-black" %>
                </div>
                <div class="flex w-1/4">
                    <%= link_to 'Rédactions', "https://wa.me/0584258085?text=j'aimerais que vous à corriger mes lacunes avant le Bac.Je voudrais accéder aux exercices, aux rédactions ansi que le groupe pour m'aider à corriger mes lacunes. Merci", class:"text-black" %>
                </div>
            </div>
        </div>
        
    </div>
<% end %> 